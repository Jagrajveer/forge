{
  "name": "forge",
  "version": "0.1.0",
  "description": "Forge CLI - AI coding assistant powered by xAI Grok",
  "type": "module",
  "bin": {
    "forge": "bin/forge"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/cli.js",
    "start:ink": "node dist/cli-ink.js",
    "lint": "eslint . --ext .ts,.tsx,.js,.cjs,.mjs",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "smoke": "node dist/tasks/smoke.js",
    "repl": "node --experimental-repl-await --loader ts-node/esm scripts/repl.ts",
    "release": "npm publish"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/better-sqlite3": "^7.6.11",
    "@types/diff": "^7.0.2",
    "@types/node": "^22.0.0",
    "@types/prompts": "^2.4.9",
    "@types/react": "^18.2.0",
    "@vitest/coverage-v8": "^3.2.4",
    "ajv": "^8.17.1",
    "eslint": "^9.36.0",
    "prettier": "^3.3.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.0",
    "typescript-eslint": "^8.44.1",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "ansi-escapes": "^7.0.0",
    "better-sqlite3": "^11.6.0",
    "chalk": "^5.3.0",
    "cli-spinners": "^2.9.2",
    "commander": "^12.1.0",
    "diff": "^5.2.0",
    "diff-match-patch": "^1.0.5",
    "diff3": "^0.0.3",
    "dotenv": "^16.6.1",
    "figlet": "^1.7.0",
    "glob": "^11.0.3",
    "gradient-string": "^3.0.0",
    "ink": "^4.4.1",
    "ink-text-input": "^5.0.1",
    "log-update": "^6.1.0",
    "ora": "^8.0.1",
    "pino": "^9.0.0",
    "pino-pretty": "^13.1.1",
    "prompts": "^2.4.2",
    "react": "^18.2.0",
    "simple-git": "^3.25.0",
    "string-width": "^7.2.0",
    "undici": "^6.19.8",
    "wrap-ansi": "^9.0.0",
    "zod": "^3.23.8"
  }
}
